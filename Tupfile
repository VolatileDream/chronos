.gitignore

COMPILER = gcc

CFLAGS += -g
CFLAGS += -Wall
CFLAGS += -Werror

FLAGS += -D_GNU_SOURCE
FLAGS += -O3
LD_FLAGS += -static

LIBS += -lrt

!cc = |> $(COMPILER) $(CFLAGS) -std=c99 $(FLAGS) -c %f -o %o |> %B.o
!prog = |> $(COMPILER) %f $(FLAGS) $(LD_FLAGS) $(LIBS) -o %o |> 

: foreach *.c |> !cc |> 
: chronos*.o main.o |> !prog |> chronos
: chronos*.o daemon.o |> !prog |> chronosd
