.gitignore

CFLAGS += -g
CFLAGS += -Wall
CFLAGS += -Werror

COMPILE = gcc

FLAGS += -D_GNU_SOURCE
FLAGS += -O3
LD_FLAGS += -static

LIBS += -lrt

!cc = |> $(COMPILE) $(CFLAGS) -std=c99 $(FLAGS) -c %f -o %o |> %B.o

: foreach *.c |> !cc |> 
: chronos*.o main.o |> $(COMPILE) $(LD_FLAGS) $(FLAGS) %f $(LIBS) -o %o |> chronos
