COMPILER = gcc
LINKER = ld

CFLAGS += -Wall
CFLAGS += -Werror
CFLAGS += -fpic
ifeq (@(DEBUG),yes)
	CFLAGS += -g
	CFLAGS += -Wpedantic
	FLAGS += -DDEBUG
else
	LD_FLAGS += -static
endif

FLAGS += -D_GNU_SOURCE
ifeq (@(UNSAFE),yes)
	FLAGS += -DUSE_UNSAFE_IO
	FLAGS += -O3
	FLAGS += -flto
endif

LIBS += -lrt

!cc = |> $(COMPILER) -std=c99 $(CFLAGS) $(FLAGS) -c %f -o %o |> %B.o
!lib = |> $(LINKER) --relocatable %f -o %o |>
!prog = |> $(COMPILER) %f $(FLAGS) $(LD_FLAGS) $(LIBS) -o %o |> 


